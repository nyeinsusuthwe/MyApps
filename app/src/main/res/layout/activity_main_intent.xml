<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    tools:context=".intent.MainActivityIntent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/jerry"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stack"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"

        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:text="@string/explicit_intent"
        android:layout_marginTop="16dp"
        android:onClick="onExplicit"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:text="@string/explicit_intent_for_result"
        android:layout_marginTop="16dp"
        android:onClick="onExplicitForResult"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:text="@string/implicit_intent"
        android:layout_marginTop="16dp"
        android:onClick="onImplicit"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:text="@string/implicit_intent_for_result"
        android:layout_marginTop="16dp"
        android:onClick="onImplicitForResult"
        />

</LinearLayout>